# Database URL (Neon PostgreSQL - Free tier)
# Get your connection string from: https://neon.tech
# IMPORTANT: Use the pooled connection string with pgbouncer=true for serverless
DATABASE_URL=postgresql://username:password@ep-xxx-pooler.region.aws.neon.tech/dbname?sslmode=require&pgbouncer=true

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_SECRET=your-access-token-secret-here
JWT_REFRESH_SECRET=your-refresh-token-secret-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (Resend)
# Get your API key from: https://resend.com
RESEND_API_KEY=re_xxxxxxxxxxxx
EMAIL_FROM="MakeBelieve Imprints <noreply@yourdomain.com>"

# App URL (for email links)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Stripe Configuration
# Get your keys from: https://dashboard.stripe.com/apikeys
# TEST MODE: Use keys starting with pk_test_ and sk_test_
# PRODUCTION: Use keys starting with pk_live_ and sk_live_
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxx
# Webhook secret from: https://dashboard.stripe.com/webhooks (click on your endpoint)
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxx

# Cron Job Secret (for scheduled tasks)
CRON_SECRET=your-cron-secret-here
