# Database URL (Neon PostgreSQL - Free tier)
# Get your connection string from: https://neon.tech
# IMPORTANT: Use the pooled connection string with pgbouncer=true for serverless
DATABASE_URL=postgresql://username:password@ep-xxx-pooler.region.aws.neon.tech/dbname?sslmode=require&pgbouncer=true

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_SECRET=your-access-token-secret-here
JWT_REFRESH_SECRET=your-refresh-token-secret-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (Resend)
# Get your API key from: https://resend.com
RESEND_API_KEY=re_xxxxxxxxxxxx
EMAIL_FROM="MakeBelieve Imprints <noreply@yourdomain.com>"

# App URL (for email links)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Stripe Configuration
# Get your keys from: https://dashboard.stripe.com/apikeys
# TEST MODE: Use keys starting with pk_test_ and sk_test_
# PRODUCTION: Use keys starting with pk_live_ and sk_live_
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxx
# Webhook secret from: https://dashboard.stripe.com/webhooks (click on your endpoint)
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxx

# Cron Job Secret (for scheduled tasks)
CRON_SECRET=your-cron-secret-here

# =============================================================================
# SUPPLIER MARKETPLACE APIs (for Admin Purchasing)
# =============================================================================

# Amazon Product Advertising API 5.0
# Sign up at: https://affiliate-program.amazon.co.uk/
# Get credentials from: https://affiliate-program.amazon.co.uk/home/tools/credentials
# Note: Requires an approved Amazon Associates account with qualifying purchases
AMAZON_ACCESS_KEY=your-amazon-access-key
AMAZON_SECRET_KEY=your-amazon-secret-key
AMAZON_PARTNER_TAG=your-associate-tag-20

# eBay Browse API
# Register at: https://developer.ebay.com/
# Create an app and get OAuth token from: https://developer.ebay.com/my/keys
# Use Production App ID (OAuth token) for live searches
EBAY_APP_ID=your-ebay-oauth-token

# AliExpress Affiliate API
# Sign up at: https://portals.aliexpress.com/
# Get API credentials from: https://portals.aliexpress.com/apitools
# Requires approved AliExpress affiliate account
ALIEXPRESS_APP_KEY=your-aliexpress-app-key
ALIEXPRESS_SECRET_KEY=your-aliexpress-secret-key
ALIEXPRESS_TRACKING_ID=your-tracking-id

# Google Custom Search API (Shopping)
# Get API key from: https://console.cloud.google.com/apis/credentials
# Create a Custom Search Engine at: https://programmablesearchengine.google.com/
# Enable "Search the entire web" and set to search Shopping results
GOOGLE_SHOPPING_API_KEY=your-google-api-key
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id
