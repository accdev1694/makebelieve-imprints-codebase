# Database URL (Neon PostgreSQL - Free tier)
# Get your connection string from: https://neon.tech
# IMPORTANT: Use the pooled connection string with pgbouncer=true for serverless
DATABASE_URL=postgresql://username:password@ep-xxx-pooler.region.aws.neon.tech/dbname?sslmode=require&pgbouncer=true

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_SECRET=your-access-token-secret-here
JWT_REFRESH_SECRET=your-refresh-token-secret-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
